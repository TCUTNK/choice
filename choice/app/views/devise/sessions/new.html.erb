<section class="signin-section">
  <img src="/choice.png" class="signin-logo">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true,placeholder: "メール", autocomplete: "email", class: "signin-form" %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: "パスワード", autocomplete: "off", class: "signin-form" %>
  </div>

  <% if devise_mapping.rememberable? -%>
      <%= f.hidden_field :remember_me, :value => true %>
  <% end -%>

  <%= f.submit "ログイン", class: "btn btn-success signin-btn" %>

<% end %>

<p class="or">もしくは</p>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), class: "signin-btn btn btn-success facebook-color" %><br />
    <% end -%>
  <% end -%>

<%= render "devise/shared/links" %>
<p class="copyright">Copyright (C) Choice All Rights Reserved.</p>
</section>